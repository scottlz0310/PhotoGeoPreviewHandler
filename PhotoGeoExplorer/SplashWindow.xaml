<Window
    x:Class="PhotoGeoExplorer.SplashWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    Title="PhotoGeoExplorer">
    <Grid Background="{ThemeResource SystemControlBackgroundBaseLowBrush}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="8">
            <TextBlock Text="PhotoGeoExplorer" FontSize="28" FontWeight="SemiBold" />
            <TextBlock Text="Loading..." Opacity="0.7" />
            <controls:ProgressRing IsActive="True" Width="36" Height="36" />
        </StackPanel>
    </Grid>
</Window>
